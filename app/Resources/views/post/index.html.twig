{% extends 'base.html.twig' %}

{% block body %}
    <h1>Posts list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Title</th>
                <th>Content</th>
                <th>Price</th>
                <th>Createddate</th>
                <th>Publisheddate</th>
                <th>Updateddate</th>
                <th>Expirationdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                <td>{{ post.type }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.price }}</td>
                <td>{% if post.createdDate %}{{ post.createdDate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if post.publishedDate %}{{ post.publishedDate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if post.updatedDate %}{{ post.updatedDate|date('Y-m-d') }}{% endif %}</td>
                <td>{% if post.expirationDate %}{{ post.expirationDate|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post_new') }}">Create a new post</a>
        </li>
    </ul>
{% endblock %}
